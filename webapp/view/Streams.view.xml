<mvc:View
    controllerName="marina.controller.Streams"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m">
    <Page>
        <l:BlockLayout
            background="Dashboard">
            <l:content>
                <l:BlockLayoutRow>
                    <l:content>    
                        <l:BlockLayoutCell>
                            <l:content>  
                                <ScrollContainer
                                    vertical="true">    
                                    <content>  
                                        <VBox
                                            width="100%"
                                            height="85vh">
                                            <items>
                                                <HBox
                                                    class="searchBox"
                                                    width="100%"
                                                    justifyContent="Center"
                                                    alignItems="Stretch">
                                                    <items>
                                                        <SearchField
                                                            class="searchField"
                                                            placeholder="Keyword"
                                                            search="search" />
                                                    </items>
                                                </HBox>
                                                <List
                                                    id="streamsList"
                                                    noDataText="No live streams found"
                                                    itemPress="openStream"
                                                    items="{/data}">
                                                    <items>
                                                        <StandardListItem
                                                            icon="{ICON}"
                                                            type="{TYPE}"
                                                            title="{TITLE}"
                                                            description="{DESCRIPTION}"
                                                            customData:id="{ID}" 
                                                            customData:url="{URL}"/>
                                                    </items>
                                                </List>
                                            </items>
                                        </VBox>
                                    </content>
                                </ScrollContainer>
                            </l:content>
                        </l:BlockLayoutCell>
                    </l:content>  
                </l:BlockLayoutRow>
            </l:content>
        </l:BlockLayout>
    </Page>
</mvc:View>