<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <VBox
        alignContent="Center"
        alignItems="Stretch"
        justifyContent="SpaceBetween">
        <form:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="2"
            labelSpanM="2"
            emptySpanL="0"
            emptySpanM="0"
            columnsL="2"
            columnsM="2"
            maxContainerCols="2"
            class="sapUiSizeCompact sapUiSmallMarginBottom">
            <form:content>
                <Label text="Notes" />
                <TextArea width="100%" height="110px" maxLength="2000" />
            </form:content>
        </form:SimpleForm>
    </VBox>
</core:FragmentDefinition>